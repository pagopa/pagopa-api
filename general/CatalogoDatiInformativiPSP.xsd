  <xs:simpleType name="stImporto">
    <xs:restriction base="xs:decimal">
      <xs:minInclusive value="0.01" />
      <xs:maxInclusive value="999999999.99" />
      <xs:pattern value="\d+\.\d{2}" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="stImportoZero">
