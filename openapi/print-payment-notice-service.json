        "required": [
          "notices"
        ],
        "type": "object",
        "properties": {
          "notices": {
            "maxItems": 1000,
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/NoticeGenerationRequestItem"
            }
          }
